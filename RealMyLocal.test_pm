package RealMyLocal ;

use vars qw($VERSION @ISA @RPC_SUB) ;
@ISA = qw(RPC::Simple::AnyRemote);
@RPC_SUB = qw(implicitAnswer) ;

sub close 
  {
    my $self = shift ;
    print "close called on ",ref($self),"\n";
  }

sub remoteHello
  {
    my $self=shift ;
    print "Remote said 'Hello world'\n";
  }

sub remoteAsk
  {
    my $self=shift ;
    my $param = shift ;
    my $callback ;

    if (ref($param) eq 'CODE')
     {
       # callback required
       $callback = $param ;         
     }
    print "Local asked me to say hello\n";

    unless (defined $callback)
      {
        # direct call to a local method
        $self->implicitAnswer("Hello local object");
        return ;
      }

    # emulate a delayed call-back
    &$callback("Hello local object" ) ;

  }

sub DESTROY
  {
    my $self = shift ;
    print "Remote object is destroyed\n";
  }
1;
